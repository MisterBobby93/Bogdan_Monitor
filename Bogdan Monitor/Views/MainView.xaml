<UserControl x:Name="mainView" x:Class="Bogdan_Monitor.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:Bogdan_Monitor.Views"
        xmlns:linechart="clr-namespace:Bogdan_Monitor.UserControls"
        mc:Ignorable="d"
        Height="700" Width="700">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- CPU Info -->
        <Border Style="{StaticResource mainBorder}" Grid.Row="0" Grid.Column="0" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Новый стиль: крупный заголовок и процент -->
                <StackPanel Grid.Row="0" Grid.ColumnSpan="4" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="20,10,0,0">
                    <TextBlock Text="CPU" FontSize="36" FontWeight="Bold" Foreground="#fcfafa" VerticalAlignment="Bottom"/>
                    <TextBlock x:Name="cpuLabel" Margin="20,0,0,0"
                               FontSize="48" FontWeight="Bold"
                               Foreground="#FF0A7AF2"
                               Text="{Binding Text, ElementName=cpuLabel, Mode=OneWay}"/>
                </StackPanel>
                

                <!-- График -->
                <linechart:LineChart x:Name="cpuChart" Grid.Row="1" Grid.ColumnSpan="4" Margin="0,8,0,8"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text="Processor Time"
                           FontSize="12" FontWeight="SemiBold"
                           VerticalAlignment="Bottom" 
                           Margin="5 0 0 0" 
                           Foreground="#464a63"/>
                <TextBlock Grid.Row="2" Grid.Column="2" Text="OS"
                           FontSize="12" FontWeight="SemiBold"
                           VerticalAlignment="Bottom" 
                           Margin="5 0 0 0" 
                           Foreground="#464a63"/>
                <TextBlock Grid.Row="2" Grid.Column="3" Text="User"
                           FontSize="12" FontWeight="SemiBold"
                           VerticalAlignment="Bottom" 
                           Margin="5 0 0 0" 
                           Foreground="#464a63"/>

                <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                    <Label x:Name="cpuTimeLabel" Foreground="#fcfafa" FontSize="14"
                           FontWeight="SemiBold"
                           VerticalContentAlignment="Center"      
                           Padding="0"
                           ContentStringFormat="{}{0:F1}" 
                           HorizontalAlignment="Left" VerticalAlignment="Center" 
                           HorizontalContentAlignment="Left"
                           Margin="5 0 0 0" />

                    <TextBlock Text="%" Foreground="#fcfafa" FontSize="14"
                               VerticalAlignment="Center" FontWeight="SemiBold"
                               HorizontalAlignment="Right" Padding="0" Margin="5 1 0 0"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="2" Orientation="Horizontal">
                    <Label x:Name="osCpuUsageLabel" Foreground="#fcfafa" FontSize="14"
                           FontWeight="SemiBold"
                           VerticalContentAlignment="Center"      
                           Padding="0"
                           ContentStringFormat="{}{0:F1}" 
                           HorizontalAlignment="Left" VerticalAlignment="Center" 
                           HorizontalContentAlignment="Left"
                           Margin="5 0 0 0" />

                    <TextBlock Text="%" Foreground="#fcfafa" FontSize="14"
                               VerticalAlignment="Center" FontWeight="SemiBold"
                               HorizontalAlignment="Right" Padding="0" Margin="5 1 0 0"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="3" Orientation="Horizontal">
                    <Label x:Name="userCpuUsageLabel" Foreground="#fcfafa" FontSize="14"
                           FontWeight="SemiBold"
                           VerticalContentAlignment="Center"      
                           Padding="0"
                           ContentStringFormat="{}{0:F1}" 
                           HorizontalAlignment="Left" VerticalAlignment="Center" 
                           HorizontalContentAlignment="Left"
                           Margin="5 0 0 0" />

                    <TextBlock Text="%" Foreground="#fcfafa" FontSize="14"
                               VerticalAlignment="Center" FontWeight="SemiBold"
                               HorizontalAlignment="Right" Padding="0" Margin="5 1 0 0"/>
                </StackPanel>               
            </Grid>
        </Border>

        <!-- GPU Info -->
        <Border Style="{StaticResource mainBorder}" Grid.Row="0" Grid.Column="1" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Новый стиль: крупный заголовок и процент -->
                <StackPanel Grid.Row="0" Grid.ColumnSpan="4" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="20,10,0,0">
                    <TextBlock Text="GPU" FontSize="36" FontWeight="Bold" Foreground="#fcfafa" VerticalAlignment="Bottom"/>
                    <TextBlock x:Name="gpuLoadLabel" Margin="20,0,0,0"
                               FontSize="48" FontWeight="Bold"
                               Foreground="#FFFC8803"
                               Text="{Binding Text, ElementName=gpuLoadLabel, Mode=OneWay}"/>
                </StackPanel>

                <!-- График -->
                <linechart:GpuLineChart x:Name="gpuChart" Grid.Row="1" Grid.ColumnSpan="4" Margin="0,8,0,8" Background="Transparent"/>
                <!-- подписи под графиком -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Temp"
                           FontSize="12" FontWeight="SemiBold"
                           VerticalAlignment="Bottom" 
                           Margin="5 0 0 0" 
                           Foreground="#464a63"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="Used"
                           FontSize="12" FontWeight="SemiBold"
                           VerticalAlignment="Bottom" 
                           Margin="5 0 0 0" 
                           Foreground="#464a63"/>
                <TextBlock Grid.Row="2" Grid.Column="2" Text="Total"
                           FontSize="12" FontWeight="SemiBold"
                           VerticalAlignment="Bottom" 
                           Margin="5 0 0 0" 
                           Foreground="#464a63"/>

                <!-- Temp -->
                <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal">
                    <Label x:Name="gpuTempLabel" Foreground="#fcfafa" FontSize="14"
                           FontWeight="SemiBold"
                           VerticalContentAlignment="Center"
                           Padding="0"
                           ContentStringFormat="{}{0:F0}"
                           HorizontalAlignment="Left" VerticalAlignment="Center"
                           HorizontalContentAlignment="Left"
                           Margin="0 0 0 0" />
                    <TextBlock Text="°C" Foreground="#fcfafa" FontSize="14"
                               VerticalAlignment="Center" FontWeight="SemiBold"
                               HorizontalAlignment="Right" Padding="0" Margin="5 1 0 0"/>
                </StackPanel>
                <!-- Used -->
                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                    <Label x:Name="gpuRamUsedLabel" Foreground="#fcfafa" FontSize="14"
                           FontWeight="SemiBold"
                           VerticalContentAlignment="Center"
                           Padding="0"
                           ContentStringFormat="{}{0:F1}"
                           HorizontalAlignment="Left" VerticalAlignment="Center"
                           HorizontalContentAlignment="Left"
                           Margin="0 0 0 0" />
                    <TextBlock Text="GB" Foreground="#fcfafa" FontSize="14"
                               VerticalAlignment="Center" FontWeight="SemiBold"
                               HorizontalAlignment="Right" Padding="0" Margin="5 1 0 0"/>
                </StackPanel>
                <!-- Total -->
                <StackPanel Grid.Row="3" Grid.Column="2" Orientation="Horizontal">
                    <Label x:Name="gpuRamTotalLabel" Foreground="#fcfafa" FontSize="14"
                           FontWeight="SemiBold"
                           VerticalContentAlignment="Center"
                           Padding="0"
                           ContentStringFormat="{}{0:F1}"
                           HorizontalAlignment="Left" VerticalAlignment="Center"
                           HorizontalContentAlignment="Left"
                           Margin="0 0 0 0" />
                    <TextBlock Text="GB" Foreground="#fcfafa" FontSize="14"
                               VerticalAlignment="Center" FontWeight="SemiBold"
                               HorizontalAlignment="Right" Padding="0" Margin="5 1 0 0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Disk Usage -->
        <Border Style="{StaticResource mainBorder}" Grid.Row="1" Grid.Column="0" Margin="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ScrollViewer.Resources>
                    <Style TargetType="ScrollBar">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#80FFFFFF"/>
                        <Setter Property="Width" Value="2"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ScrollBar">
                                    <Grid Background="{TemplateBinding Background}">
                                        <Track Name="PART_Track"
                                               Value="{TemplateBinding Value}"
                                               Minimum="{TemplateBinding Minimum}"
                                               Maximum="{TemplateBinding Maximum}">
                                            <Track.Thumb>
                                                <Thumb Background="{TemplateBinding Foreground}" Height="24" MinHeight="16" Opacity="0.5"/>
                                            </Track.Thumb>
                                        </Track>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <!-- Новый стиль для ProgressBar с закруглениями -->
                    <Style x:Key="RoundedProgressBar" TargetType="ProgressBar">
                        <Setter Property="Height" Value="10"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ProgressBar">
                                    <Grid x:Name="Root" Height="{TemplateBinding Height}">
                                        <Border x:Name="PART_Track" 
                                                Background="{TemplateBinding Background}" 
                                                CornerRadius="5"/>
                                        <Border x:Name="PART_Indicator" 
                                                Background="{TemplateBinding Foreground}" 
                                                CornerRadius="5"
                                                HorizontalAlignment="Left"
                                                Width="0"/>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsIndeterminate" Value="True">
                                            <Setter TargetName="PART_Indicator" Property="Visibility" Value="Collapsed"/>
                                        </Trigger>
                                        <Trigger Property="Orientation" Value="Vertical">
                                            <!-- Для вертикального ProgressBar можно добавить обработку -->
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ScrollViewer.Resources>
                <ItemsControl x:Name="diskPanel" Margin="0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="14" BorderThickness="0" Margin="10" Padding="16"
                                    Background="#26283a">
                                <!-- Если нужен эффект тени, раскомментируйте строку ниже: -->
                                <!--
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.3" Color="#FF000000"/>
                                </Border.Effect>
                                -->
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Верх: иконка, имя, тип, процент -->
                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="💾" FontSize="28" Margin="0 0 10 0" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding DiskName}" FontSize="20" FontWeight="Bold"
                                                   Foreground="#fcfafa" Margin="0 0 10 0" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding DiskType}" FontSize="16" FontWeight="SemiBold"
                                                   Foreground="#FFFC8803" Margin="0 0 10 0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding UsedPercent, StringFormat={}{0:F0}%}" 
                                               FontSize="22" FontWeight="Bold" Foreground="#FFFC8803" VerticalAlignment="Center" Margin="0,0,0,0"/>

                                    <!-- Прогресс-бар -->
                                    <ProgressBar Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                 Height="10" Margin="0,12,0,0"
                                                 Minimum="0" Maximum="100"
                                                 Value="{Binding UsedPercent}"
                                                 Foreground="#FFFC8803"
                                                 Background="#393b52"
                                                 BorderThickness="0"
                                                 Style="{StaticResource RoundedProgressBar}"/>

                                    <!-- Значения Used/Free/Total -->
                                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,14,0,0" HorizontalAlignment="Left">
                                        <TextBlock Text="Used:" FontSize="14" Foreground="#888" Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding UsedGB, StringFormat={}{0:F1} GB}" FontSize="16" FontWeight="Bold" Foreground="#fc6" Margin="0,0,16,0"/>
                                        <TextBlock Text="Free:" FontSize="14" Foreground="#888" Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding FreeGB, StringFormat={}{0:F1} GB}" FontSize="16" FontWeight="Bold" Foreground="#6cf" Margin="0,0,16,0"/>
                                        <TextBlock Text="Total:" FontSize="14" Foreground="#888" Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding TotalGB, StringFormat={}{0:F1} GB}" FontSize="16" FontWeight="Bold" Foreground="#fcfafa"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- RAM и Network в правой нижней ячейке -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- RAM Info (верхняя часть) -->
            <Border Style="{StaticResource mainBorder}" Grid.Row="0" Margin="0 0 0 5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="RAM" Style="{StaticResource titleText}" Margin="5 0 0 0"
                               VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    <ProgressBar x:Name="ramProgressBar" Grid.Column="1" Grid.ColumnSpan="3" 
                                 Style="{DynamicResource ProgressBarStyle}"                                  
                                 VerticalAlignment="Center" 
                                 HorizontalAlignment="Center"
                                 Width="90" Height="6" Minimum="0" Maximum="100"
                                 Foreground="#FF05F4FC"/>
                    <Grid Grid.Column="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Name="ramLabel" Grid.Column="0" 
                               Foreground="#fcfafa" FontSize="15"
                               FontWeight="SemiBold"
                               VerticalContentAlignment="Center"      
                               Padding="0"
                               ContentStringFormat="{}{0:F1}" 
                               HorizontalAlignment="Right" VerticalAlignment="Center" 
                               HorizontalContentAlignment="Right"/>
                        <TextBlock Text="%" Grid.Column="1" Foreground="#fcfafa" FontSize="15"
                                   Margin="3 8 5 8" VerticalAlignment="Center" FontWeight="SemiBold"
                                   HorizontalAlignment="Right"/>
                    </Grid>

                    <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="Used"
                               FontSize="12" FontWeight="SemiBold"
                               VerticalAlignment="Bottom" 
                               Margin="5 0 0 0" 
                               Foreground="#464a63"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Free"
                               FontSize="12" FontWeight="SemiBold"
                               VerticalAlignment="Bottom" 
                               Margin="5 0 0 0" 
                               Foreground="#464a63"/>
                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                        <Label x:Name="ramUsedLabel" Foreground="#fcfafa" FontSize="14"
                               FontWeight="SemiBold"
                               VerticalContentAlignment="Center"      
                               Padding="0"
                               ContentStringFormat="{}{0:F1}" 
                               HorizontalAlignment="Left" VerticalAlignment="Center" 
                               HorizontalContentAlignment="Left"
                               Margin="5 0 0 0" />
                        
                        <TextBlock Text="GB" Foreground="#fcfafa" FontSize="14"
                                   VerticalAlignment="Center" FontWeight="SemiBold"
                                   HorizontalAlignment="Right" Padding="0" Margin="5 1 0 0"/>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Orientation="Horizontal">
                        <Label x:Name="ramFreeLabel" Foreground="#fcfafa" FontSize="14"
                               FontWeight="SemiBold"
                               VerticalContentAlignment="Center"      
                               Padding="0"
                               ContentStringFormat="{}{0:F1}" 
                               HorizontalAlignment="Left" VerticalAlignment="Center" 
                               HorizontalContentAlignment="Left"
                               Margin="5 0 0 0" />

                        <TextBlock Text="GB" Foreground="#fcfafa" FontSize="14"
                                   VerticalAlignment="Center" FontWeight="SemiBold"
                                   HorizontalAlignment="Right" Padding="0" Margin="5 1 0 0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Network Info (нижняя часть) -->
            <Border Style="{StaticResource mainBorder}" Grid.Row="1" Margin="0 5 0 0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Network" Style="{StaticResource titleText}" Margin="5 0 0 0"
                               VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="Sent"
                               FontSize="12" FontWeight="SemiBold"
                               VerticalAlignment="Center" 
                               Margin="5 0 0 0" 
                               Foreground="#464a63"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Received"
                               FontSize="12" FontWeight="SemiBold"
                               VerticalAlignment="Center" 
                               Margin="5 0 0 0" 
                               Foreground="#464a63"/>

                    <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
                        <Label x:Name="networkSentBytesLabel" 
                               Foreground="#fcfafa" FontSize="14"
                               FontWeight="SemiBold"
                               VerticalContentAlignment="Center"      
                               Padding="0"
                               ContentStringFormat="{}{0:F1}" 
                               HorizontalAlignment="Left" VerticalAlignment="Center" 
                               HorizontalContentAlignment="Left"
                           Margin="5 0 0 0" />

                        <TextBlock Text="Mb/s" Foreground="#fcfafa" FontSize="14"
                                   VerticalAlignment="Center" FontWeight="SemiBold"
                                   HorizontalAlignment="Right" Padding="0" Margin="5 1 0 0"/>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal">

                        <Label x:Name="networkReceivedBytesLabel" Foreground="#fcfafa" FontSize="14"
                               FontWeight="SemiBold"
                               VerticalContentAlignment="Center"      
                               Padding="0"
                               ContentStringFormat="{}{0:F1}" 
                               HorizontalAlignment="Left" VerticalAlignment="Center" 
                               HorizontalContentAlignment="Left"
                           Margin="5 0 0 0" />

                        <TextBlock Text="Mb/s" Foreground="#fcfafa" FontSize="14"
                                   VerticalAlignment="Center" FontWeight="SemiBold"
                                   HorizontalAlignment="Right" Padding="0" Margin="5 1 0 0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>  
</UserControl>

